{
  "name": "test/docker-php-app",
  "description": "Simple PHP app for Docker development testing",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "monolog/monolog": "^3.4",
    "nesbot/carbon": "^2.71",
    "symfony/var-dumper": "^6.3",
    "vlucas/phpdotenv": "^5.5",
    "guzzlehttp/guzzle": "^7.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "fakerphp/faker": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo 'âœ… Composer packages installed successfully!'"
    ],
    "test": "vendor/bin/phpunit",
    "dump": "composer dump-autoload -o"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
